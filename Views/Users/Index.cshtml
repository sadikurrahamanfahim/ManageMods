@model List<OrderManagementSystem.Models.Entities.User>
@{
    ViewData["Title"] = "User Management";
}

<div class="container-fluid">
    <div class="card shadow-sm">
        <div class="card-header bg-white d-flex justify-content-between align-items-center">
            <h5 class="mb-0">
                <i class="bi bi-person-badge"></i> Users
                <span class="badge bg-primary">@Model.Count</span>
            </h5>
            <a asp-action="Create" class="btn btn-primary btn-sm">
                <i class="bi bi-plus-circle"></i> Add User
            </a>
        </div>
        <div class="card-body p-0">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Role</th>
                                <th>Status</th>
                                <th>Created</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in Model)
                            {
                                <tr>
                                    <td>
                                        <strong>@user.FullName</strong>
                                    </td>
                                    <td>@user.Email</td>
                                    <td>
                                        <select class="form-select form-select-sm" style="width: 150px;" onchange="updateRole('@user.Id', this.value)">
                                            <option value="admin" selected="@(user.Role == "admin")">Admin</option>
                                            <option value="order_creator" selected="@(user.Role == "order_creator")">Order Creator</option>
                                            <option value="delivery_handler" selected="@(user.Role == "delivery_handler")">Delivery Handler</option>
                                        </select>
                                    </td>
                                    <td>
                                        @if (user.IsActive)
                                        {
                                            <span class="badge bg-success">Active</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">Inactive</span>
                                        }
                                    </td>
                                    <td>
                                        <small>@user.CreatedAt.ToString("MMM dd, yyyy")</small>
                                    </td>
                                    <td>
                                        <button onclick="toggleStatus('@user.Id')" class="btn btn-sm btn-outline-@(user.IsActive ? "danger" : "success")">
                                            <i class="bi bi-@(user.IsActive ? "x-circle" : "check-circle")"></i>
                                            @(user.IsActive ? "Deactivate" : "Activate")
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-person-badge" style="font-size: 4rem; color: #ccc;"></i>
                    <p class="text-muted mt-3">No users found</p>
                </div>
            }
        </div>
    </div>

    <!-- Role Descriptions -->
    <div class="card shadow-sm mt-4">
        <div class="card-header bg-white">
            <h6 class="mb-0"><i class="bi bi-info-circle"></i> Role Descriptions</h6>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-4">
                    <h6><span class="badge bg-danger">Admin</span></h6>
                    <p class="small text-muted">Full access to all features including user management, products, and system settings.</p>
                </div>
                <div class="col-md-4">
                    <h6><span class="badge bg-primary">Order Creator</span></h6>
                    <p class="small text-muted">Can create and view orders. Cannot change order status or access admin features.</p>
                </div>
                <div class="col-md-4">
                    <h6><span class="badge bg-success">Delivery Handler</span></h6>
                    <p class="small text-muted">Can view orders and update delivery status. Cannot create new orders.</p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function updateRole(userId, newRole) {
            if (confirm(`Are you sure you want to change this user's role to "${newRole.replace('_', ' ')}"?`)) {
                $.ajax({
                    url: '@Url.Action("UpdateRole", "Users")',
                    type: 'POST',
                    data: { id: userId, role: newRole },
                    success: function(response) {
                        if (response.success) {
                            alert('✅ ' + response.message);
                            location.reload();
                        } else {
                            alert('❌ ' + response.message);
                        }
                    },
                    error: function() {
                        alert('❌ An error occurred');
                        location.reload();
                    }
                });
            } else {
                location.reload(); // Reset dropdown
            }
        }

        function toggleStatus(userId) {
            $.ajax({
                url: '@Url.Action("ToggleStatus", "Users")',
                type: 'POST',
                data: { id: userId },
                success: function(response) {
                    if (response.success) {
                        alert('✅ ' + response.message);
                        location.reload();
                    } else {
                        alert('❌ ' + response.message);
                    }
                },
                error: function() {
                    alert('❌ An error occurred');
                }
            });
        }
    </script>
}