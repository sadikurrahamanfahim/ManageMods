@{
    ViewData["Title"] = "Access Denied";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
</head>
<body class="bg-light">
    <div class="container">
        <div class="row justify-content-center align-items-center" style="min-height: 100vh;">
            <div class="col-md-6 text-center">
                <i class="bi bi-shield-x text-danger" style="font-size: 6rem;"></i>
                <h1 class="mt-4">Access Denied</h1>
                <p class="lead text-muted">You don't have permission to access this page.</p>
                <a asp-controller="Dashboard" asp-action="Index" class="btn btn-primary">
                    <i class="bi bi-house"></i> Go to Dashboard
                </a>
                <a asp-controller="Auth" asp-action="Logout" class="btn btn-outline-secondary">
                    <i class="bi bi-box-arrow-right"></i> Logout
                </a>
            </div>
        </div>
    </div>
</body>
</html>