@model OrderManagementSystem.Models.Entities.Customer
@{
    ViewData["Title"] = "Customer Details";
    var orders = ViewBag.Orders as List<OrderManagementSystem.Models.Entities.Order>;
}

<div class="container-fluid">
    <div class="row">
        <!-- Customer Info Card -->
        <div class="col-md-4">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-person-circle"></i> Customer Information</h5>
                </div>
                <div class="card-body">
                    <div class="text-center mb-4">
                        <div class="bg-primary text-white rounded-circle d-inline-flex align-items-center justify-content-center" style="width: 100px; height: 100px; font-size: 3rem;">
                            @Model.Name.Substring(0, 1).ToUpper()
                        </div>
                        <h4 class="mt-3">@Model.Name</h4>
                        @if (Model.TotalOrders >= 5)
                        {
                            <span class="badge bg-warning text-dark">VIP Customer</span>
                        }
                        else if (Model.TotalOrders >= 3)
                        {
                            <span class="badge bg-info">Regular Customer</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">New Customer</span>
                        }
                    </div>

                    <hr>

                    <div class="mb-3">
                        <strong><i class="bi bi-telephone"></i> Phone:</strong>
                        <p class="mb-0">@Model.Phone</p>
                    </div>

                    <div class="mb-3">
                        <strong><i class="bi bi-geo-alt"></i> Address:</strong>
                        <p class="mb-0">@(Model.Address ?? "Not provided")</p>
                    </div>

                    <div class="mb-3">
                        <strong><i class="bi bi-cart"></i> Total Orders:</strong>
                        <p class="mb-0">@Model.TotalOrders</p>
                    </div>

                    <div class="mb-3">
                        <strong><i class="bi bi-calendar"></i> Customer Since:</strong>
                        <p class="mb-0">@Model.CreatedAt.ToString("MMM dd, yyyy")</p>
                    </div>

                    <div class="mb-3">
                        <strong><i class="bi bi-clock"></i> Last Order:</strong>
                        <p class="mb-0">@Model.UpdatedAt.ToString("MMM dd, yyyy")</p>
                    </div>
                </div>
            </div>

            <!-- Statistics Card -->
            <div class="card shadow-sm">
                <div class="card-header bg-white">
                    <h6 class="mb-0"><i class="bi bi-bar-chart"></i> Statistics</h6>
                </div>
                <div class="card-body">
                    @if (orders != null && orders.Any())
                    {
                        var completedOrders = orders.Where(o => o.Status == "completed").ToList();
                        var totalSpent = completedOrders.Sum(o => o.ProductPrice * o.ProductQuantity);
                        var avgOrderValue = completedOrders.Any() ? completedOrders.Average(o => o.ProductPrice * o.ProductQuantity) : 0;

                        <div class="mb-3">
                            <strong>Total Spent:</strong>
                            <h4 class="text-success">৳@totalSpent.ToString("N0")</h4>
                        </div>
                        <div class="mb-3">
                            <strong>Average Order Value:</strong>
                            <h5 class="text-primary">৳@avgOrderValue.ToString("N0")</h5>
                        </div>
                        <div class="mb-3">
                            <strong>Completed Orders:</strong>
                            <p class="mb-0">@completedOrders.Count / @Model.TotalOrders</p>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">No statistics available</p>
                    }
                </div>
            </div>
        </div>

        <!-- Orders History -->
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="mb-0"><i class="bi bi-clock-history"></i> Order History</h5>
                </div>
                <div class="card-body p-0">
                    @if (orders != null && orders.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Order #</th>
                                        <th>Product</th>
                                        <th>Quantity</th>
                                        <th>Amount</th>
                                        <th>Status</th>
                                        <th>Date</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var order in orders)
                                    {
                                        <tr>
                                            <td><strong>@order.OrderNumber</strong></td>
                                            <td>@order.ProductName</td>
                                            <td>@order.ProductQuantity</td>
                                            <td>৳@((order.ProductPrice * order.ProductQuantity).ToString("N0"))</td>
                                            <td>
                                                @if (order.Status == "pending")
                                                {
                                                    <span class="badge bg-warning text-dark">Pending</span>
                                                }
                                                else if (order.Status == "completed")
                                                {
                                                    <span class="badge bg-success">Completed</span>
                                                }
                                                else if (order.Status == "cancelled")
                                                {
                                                    <span class="badge bg-danger">Cancelled</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-info">@order.Status.Replace("_", " ")</span>
                                                }
                                            </td>
                                            <td>
                                                <small>@order.CreatedAt.ToString("MMM dd, yyyy")</small>
                                            </td>
                                            <td>
                                                <a asp-controller="Orders" asp-action="Details" asp-route-id="@order.Id" class="btn btn-sm btn-outline-primary">
                                                    <i class="bi bi-eye"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="bi bi-inbox" style="font-size: 3rem; color: #ccc;"></i>
                            <p class="text-muted mt-3">No orders found</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary"/>
            <i class="bi bi-arrow-left"></i> Back to Customers
        </div>
</div>